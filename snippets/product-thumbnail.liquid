{% if product-thumbnail %}
  <div class="{% if products_per_row == "2" %}six columns {% cycle 'alpha', 'omega' %}{% elsif products_per_row == "3" %}four columns {% cycle 'alpha', '', 'omega' %}{% else %}three columns {% cycle 'alpha', '', '', 'omega' %}{% endif %} thumbnail {% cycle 'even', 'odd' %}">
{% else %}
  <div class="{% if products_per_row == "2" %}eight columns {% cycle 'alpha', 'omega' %}{% elsif products_per_row == "3" %}one-third column {% cycle 'alpha', '', 'omega' %}{% else %}four columns {% cycle 'alpha', '', '', 'omega' %}{% endif %} thumbnail {% cycle 'even', 'odd' %}">
{% endif %}

  {% if product.featured_image.alt contains 'youtube' or image.alt contains 'vimeo' %}
    {% assign alt_text = product.title %}
  {% else %}
    {% assign alt_text = product.featured_image.alt %}
  {% endif %}

  <a href="{{ product.url | within: collection }}" title="{{ product.title | escape }}">
    <img {% if settings.align_height %}style="max-height:{{ settings.collection_height }}px"{% endif %} src="{{ "loading.gif" | asset_url }}" data-original="{{ product.featured_image | product_img_url: 'large' }}" alt="{{ alt_text | escape }}" class="primary" />
    {% if settings.collection_secondary_image %}
      <img {% if settings.align_height %}style="max-height:{{ settings.collection_height }}px"{% endif %} src="{% if product.images[1] != blank %}{{ product.images[1] | product_img_url: 'large' }}{% else %}{{ product.featured_image | product_img_url: 'large' }}{% endif %}" alt="{{ alt_text | escape }}" class="secondary" />    
    {% endif %}

    <div class="info"> 
      <span class="title">{{ product.title }}</span>                                             
      <span class="price">
        {% if product.compare_at_price_max > product.price %}
          <span class="was_price">{{ product.compare_at_price_max | money }}</span>
        {% endif %}
          
        {% if product.available %}
          {% if product.price_varies %}
            {% if product.compare_at_price_max > product.price %}
              <br />
            {% endif %}
            <small><em>{{ 'products.general.from' | t }}</em></small>
          {% endif %}
          {{ product.price_min | money }}
        {% else %}
          {{ product.price_min | money }} - {{ 'products.product.sold_out' | t }}
        {% endif %}
      </span>
    </div>
    {% if product.compare_at_price_max > product.price %}
      <div class="sale">{{ 'collections.general.sale' | t }}</div>
    {% endif %}
    {% for col in product.collections %}
      {% if col.handle == 'new' %}
        <div class="sale">{{ 'collections.general.new' | t }}</div>
      {% endif %}
    {% endfor %}
  </a>

  {% if settings.quick_shop_enabled %}
    <div data-rel="#product-{{ product.id }}" class="quick_shop action_button">
      {{ 'collections.general.quick_shop' | t }}
    </div>

    <div class="modal" id="product-{{ product.id }}">
      <div title="{{ 'layout.general.close_window' | t }}" class="fancybox-close"></div>
      <div class="nine columns alpha modal_image feature_image">
        <img src="{{ product.featured_image | product_img_url: 'grande' }}" alt="{{ alt_text | escape }}" />
      </div>
      <div class="five columns">
        <h3>{{ product.title }}</h3>

        <p class="modal_price">
          <span class="was_price">
            {% if product.price < product.compare_at_price_max %}
              {{ product.compare_at_price | money }} 
            {% endif %}
          </span>
          <span class="current_price">
            {{ product.price | money }} {% if product.available == false %} - {{ 'products.product.sold_out' | t }}{% endif %}      
          </span>
        </p>

        {% include 'product-notify-me' %}

        {% if settings.product_description_position == "top" %}
          {% if settings.quick_shop_full_description %}
            {{ product.description | split: '<!-- split -->' | first }}
          {% else %}
            <p>
              {{ product.description | strip_html | truncatewords: settings.description_words | replace: 'Description', '' | replace: 'Dimensions', '' | replace: 'Details', '' | replace: 'Specs', '' | replace: 'Shipping', ''  }}
            </p>
          {% endif %}
          <p>
            <a href="{{ product.url | within: collection }}" class="view_product_info" title="{{ product.title | escape }}">{{ 'collections.general.view_product_details_html' | t }}</a>
          </p>
        {% endif %}
    
        {% include 'product-form' %}

        {% if settings.product_description_position == "bottom" %}
          {% if settings.quick_shop_full_description %}
            {{ product.description | split: '<!-- split -->' | first }}
          {% else %}
            <p>
              {{ product.description | strip_html | truncatewords: settings.description_words | replace: 'Description', '' | replace: 'Dimensions', '' | replace: 'Details', '' | replace: 'Specs', '' | replace: 'Shipping', ''  }}
            </p>
          {% endif %}
          <p>
            <a href="{{ product.url | within: collection }}" class="view_product_info" title="{{ product.title | escape }}">{{ 'collections.general.view_product_details_html' | t }}</a>
          </p>
        {% endif %}
      
      </div>  
	  </div>
	{% endif %}
</div>