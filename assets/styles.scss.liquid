$tablet: 767px;
$mobile: 480px;

*,
*::before,
*::after {
	box-sizing: border-box;
}


.top_bar {
	position: fixed;
	z-index: 100;
	width: 100%;


	.top_bar_search {
		padding-right: 10px;
	}

	form.search {
		width: 50%;
	}

	.logo__container,
	.logo,
	#nav {
		display: inline-block;
	}

	.logo__container {
		margin: 0;
		padding: 0 10px;
		height: 75px;
		float: left;
	}

	.logo {
		color: #eee;
		margin-bottom: 0;
		border-bottom: none;
		height: 100%;
		max-width: 40px;
	}

	#nav {
		border: none;
		margin: 0;
		padding: 0;

		@media screen and (max-width: $tablet) {
			position: absolute;
			top: 75px;
			z-index: 9999;
			background: #222;
			width: 100%;
			left: -100%;
			transition: all 0.3s;
		}

		.menu__item {
			float: left;
			padding: 0;
			border: 0;

			@media screen and (max-width: $tablet) {
				float: none;
				display: block;
				border-top: 1px solid rgba(255, 255, 255, 0.3);
			}

		}

		.menu__item-link {
			padding: 0 20px;
			height: 75px;
			line-height: 75px;
			color: #eee;
			transition: all 0.2s;

			@media screen and (max-width: $tablet) {
				height: 40px;
				line-height: 40px;
			}

			&.active {
				color: white;
			}

			&:hover {
				text-shadow: 0px 1px 0px black, 0px 2px 0px black, 0px 3px 0px black;
				color: white;
			}
		}	
	}

	.nav-toggle-label {
		height: 75px;
		padding-top: 20px;

		&:hover {
			cursor: pointer;
		}

		.toggle__text,
		.toggle__icon {
			color: white;
			display: block;
			font-family: Futura, 'Century Gothic', AppleGothic, sans-serif;
		}

		.toggle__text {
			font-size: 8px;
			text-transform: uppercase;
			line-height: 8px;
		}

		.toggle__icon {
			font-size: 36px;
		}
	}

	.mobile__toggle {
		position: absolute;
		left: -9999%;
	}

	.mobile__toggle:checked + #nav {
		left: 0;
	}

	a.cart_btn {
		height: auto;
		line-height: normal;
		padding: 25px 0 20px 22px;	
		background-position: left 25px;

		&:hover,
		&:focus {
			background-position: left 25px;
		}
	}
}

.breadcrumb {

	@media screen and (max-width: $tablet) {
		text-align: center;
	}
}

div.content {
	padding: 75px 0 15px;
}

.home__hero {
	padding-top: 42%;
	background: url("https://images.unsplash.com/photo-1441943250180-ea34e997ffad?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&s=1e3aec2a82ef572d4e54eff183b20a46");
	background-size: cover;
	position: relative;

	.hero__content-container {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
	}

	.hero__header,
	.hero__subheader {
		color: white;
		text-align: left;
		line-height: 1;
		border-bottom: none;
		text-shadow: 0 0 100px #333, 1px 1px 0 rgba(0, 0, 0, 0.3), 0 1px 0 rgba(0, 0, 0, 0.3);
	}

	.hero__header {
		padding: 15% 10px 0;
		font-size: 92px;
		font-weight: bold;
		letter-spacing: -1px;
	}

	.hero__subheader {
		padding: 0 10px;
	}
}