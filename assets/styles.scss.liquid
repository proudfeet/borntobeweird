$tablet: 767px;
$mobile: 480px;


// COLOURS
$black: #222;
$red: #be4333;
$lightGrey: #e8e8e8;

// FONTS
$OpenSansCondensed: "Open Sans Condensed", sans-serif;

*,
*::before,
*::after {
	box-sizing: border-box;
}

.hide {
	display: none;
}

.tablet-hide {

	@media screen and (max-width: $tablet) {
		display: none;
	}
}

.mobile-hide {

	@media screen and (max-width: $mobile) {
		display: none;
	}
}

body {
	background: url("white_wall_hash.png");
}

a:focus {
	outline: 2px solid $red;
}


.top_bar {
	position: fixed;
	z-index: 100;
	width: 100%;

	.top_bar_search {
		padding-right: 10px;
	}

	form.search {
		width: 50%;
	}

	.logo__container,
	.logo,
	#nav {
		display: inline-block;
	}

	.logo__container {
		margin: 0;
		padding: 0 10px;
		height: 75px;
		float: left;
	}

	.logo {
		color: #eee;
		margin-bottom: 0;
		border-bottom: none;
		height: 100%;
		max-width: 40px;
	}

	#nav {
		border: none;
		margin: 0;
		padding: 0;

		@media screen and (max-width: $tablet) {
			position: absolute;
			top: 75px;
			z-index: 9999;
			background: #222;
			width: 100%;
			left: -100%;
			transition: all 0.3s;
		}

		.menu__item {
			float: left;
			padding: 0;
			border: 0;

			@media screen and (max-width: $tablet) {
				float: none;
				display: block;
				border-top: 1px solid rgba(255, 255, 255, 0.3);
			}

		}

		.menu__item-link {
			padding: 0 20px;
			height: 75px;
			line-height: 75px;
			color: #b6b6b6;
			transition: all 0.2s;

			@media screen and (max-width: $tablet) {
				height: 40px;
				line-height: 40px;
			}

			&.active {
				color: white;
			}

			&:hover,
			&:focus {
				text-shadow: 0px 1px 0px black, 0px 2px 0px black, 0px 3px 0px black;
				color: white;
			}
		}	
	}

	.nav-toggle-label {
		height: 75px;
		padding-top: 20px;

		&:hover {
			cursor: pointer;
		}

		.toggle__text,
		.toggle__icon {
			color: white;
			display: block;
			font-family: Futura, 'Century Gothic', AppleGothic, sans-serif;
		}

		.toggle__text {
			font-size: 8px;
			text-transform: uppercase;
			line-height: 8px;
		}

		.toggle__icon {
			font-size: 36px;
		}
	}

	.mobile__toggle {
		position: absolute;
		left: -9999%;
	}

	.mobile__toggle:checked + #nav {
		left: 0;
	}

	a.cart_btn {
		height: auto;
		line-height: normal;
		padding: 25px 0 20px 22px;	
		background-position: left 25px;

		&:hover,
		&:focus {
			background-position: left 25px;
		}
	}
}

.breadcrumb {

	@media screen and (max-width: $tablet) {
		text-align: center;
	}
}

div.content {
	padding: 75px 0 15px;
}

.home__hero {
	background: url("oregonForest.jpg");
	background-size: cover;
	position: relative;

	.hero__content-container {
		padding: 125px 0 175px;

		@media screen and (max-width: $tablet) {
			padding: 50px 0 100px;
		}

		@media screen and (max-width: $mobile) {
			padding: 25px 0 50px;
		}
	}

	.hero__header,
	.hero__subheader {
		color: white;
		text-align: left;
		line-height: 1;
		border-bottom: none;
		text-shadow: 0 0 100px #333, 1px 1px 0 rgba(0, 0, 0, 0.3), 0 15px 10px rgba(0, 0, 0, 0.3);
		font-weight: bold;
	}

	.hero__header {
		padding: 0 10px 0;
		font-size: 92px;
		letter-spacing: -1px;

		@media screen and (max-width: $tablet) {
			font-size: 54px;
			padding-top: 7%;
		}

		@media screen and (max-width: $mobile) {
			font-size: 36px;
		}
	}

	.hero__subheader {
		padding: 0 10px;

		@media screen and (max-width: $mobile) {
			font-size: 18px;
		}
	}

	.hero__button-container {
		padding-top: 20px;

		@media screen and (max-width: $tablet) {
			padding-top: 15px;
		}

		@media screen and (max-width: $mobile) {
			padding-top: 5px;
		}
	}
}

.shipping__banner-container {
	background: $lightGrey;

	.shipping__banner {
		border-bottom: none;
		color: $red;
		padding: 10px 0;
		font-weight: bold;

		@media screen and (max-width: $mobile) {
			font-size: 18px;
		}
	}
}

div.home-content__wrapper {
	padding: 50px 0;
	margin: 50px auto;
	border-top: 5px solid rgba($red, 0.3);
	border-bottom: 5px solid rgba($red, 0.3);
}

.insta__wrapper {
	padding-bottom: 100px;

	.title {
		padding:0 0 50px;

		@media screen and (max-width: $tablet) {
			padding: 0 0 30px;
		}

		@media screen and (max-width: $mobile) {
			padding: 0 0 20px;
		}

		a {
			border-bottom: none;
			margin: 0;

		}
	}
}

div.insta__post {
	padding-bottom: 10px;

	img {
		max-width: 100%;
	}
}

// ******************
// *** COLLECTION ***
// ******************

.thumbnail {
	border-bottom: none;
	
	.title {
		font-family: $OpenSansCondensed;
		text-transform: uppercase;
		font-weight: bold;
		font-size: 20px;
	}

	.price {
		text-align: center;
		float: none;
	}
}

// ****************
// ****  CART  ****
// ****************

.cart {

	.subtotal {
		text-align: center;
		border-bottom: none;
		font-weight: bold;
	}
}

.checkout_table_header,
.price_total,
.remove_column,
.update_subtotal_text {

	@media screen and (max-width: $tablet) {
		display: block;
	}
}

.update_subtotal_text {
	line-height: 1.2;
}



.cart__product {
	
	&:last-of-type {
		
		&:after {
			content: "";
			display: block;
			margin: 10px auto 0;
			border-bottom: 1px solid #222;
			width: calc(100% - 20px);
		}
	}

	.product__image-name-container {
		padding: 0;
	}
}

// FOOTER

div.footer {
	background: $black;
	color: #eee;

	.credits {
		color: $lightGrey;
	}

	h6 {
		color: #eee;
	}

	a:hover,
	a:focus,
	a.ss-icon:hover,
	a.ss-icon:focus {
		color: white;
	}

	input.contact_email[type="email"] {
		width: 100%;
	}

	input.sign_up[type="submit"] {
		margin-left: 0;
		width: 100% !important;
	}
}