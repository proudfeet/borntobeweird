*,
*::before,
*::after {
	box-sizing: border-box;
}


.top_bar {

	.top_bar_search {
		padding-right: 10px;
	}

	form.search {
		width: 50%;
	}

	.logo__container,
	.logo,
	#nav {
		display: inline-block;
	}

	.logo__container {
		margin: 0;
		padding: 0 10px;
		height: 75px;
	}

	.logo {
		color: #eee;
		margin-bottom: 0;
		border-bottom: none;
		height: 100%;
	}

	#nav {
		border: none;
		margin: 0;
		padding: 0;

		.menu__item {
			float: left;
			padding: 0;
			border: 0;
		}

		.menu__item-link {
			padding: 0 20px;
			height: 75px;
			line-height: 75px;
			color: #eee;
			transition: all 0.2s;

			&.active {
				color: #62acd3;
			}

			&:hover {
				background: #333;
				text-shadow: 0px 1px 0px #333, 0px 2px 0px #333, 0px 3px 0px rgba(255, 255, 255, 0.2);
			}
		}	
	}
}